# Service Configuration
SERVICE_NAME=go-grst-boilerplate
ENVIRONMENT=development

# HTTP Server
HTTP_PORT=3000

# gRPC Server
GRPC_PORT=50051

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=go_grst_db
DB_TIMEZONE=Asia/Jakarta
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24

# CORS
CORS_ORIGINS=*

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_ENDPOINT=localhost:4317
OTEL_SERVICE_NAME=go-grst-boilerplate
OTEL_EXPORTER_TYPE=stdout  # Options: stdout, otlp

# Logger Configuration
LOG_LEVEL=info    # Options: debug, info, warn, error
LOG_FORMAT=json   # Options: json, console
